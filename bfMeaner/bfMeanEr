#!/bin/bash
#
# ARG_POSITIONAL_INF([file],[3 pdb or xvg files]))
# ARG_OPTIONAL_SINGLE([prefix],[p],[add prefix for the file output])
# ARG_OPTIONAL_BOOLEAN([pdb],[],[enables pdb files as input])
# ARG_OPTIONAL_SINGLE([ref],[r],[in case of --pdb on, add pdb reference pdb file (optional)])
# ARG_OPTIONAL_BOOLEAN([xvg],[],[enables xvg files as input])
# ARG_HELP([The general script's help msg])
# ARG_OPTIONAL_REPEATED([include],[I],[Directory for temporary folders],['/tmp'])

# ARGBASH_GO()
# needed because of Argbash --> m4_ignore([
### START OF CODE GENERATED BY Argbash v2.8.1 one line above ###
# Argbash is a bash code generator used to get arguments parsing right.
